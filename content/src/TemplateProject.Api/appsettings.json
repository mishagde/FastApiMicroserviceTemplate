{
  "Service": {
    "Name": "TemplateProject"
  },

  "ConnectionStrings": {
    "Postgres": "Host=postgres;Port=5432;Database=templateproject;Username=template;Password=template",
    "Redis": "redis:6379",
    "RabbitMq": "rabbitmq"
  },

  "Jwt": {
    "Key": "REPLACE_WITH_SECURE_KEY"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "OpenSearch",
        "Args": {
          "nodeUris": "http://opensearch:9200",
          "indexFormat": "logs-templateproject-{0:yyyy.MM}",
          "autoRegisterTemplate": true
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "TemplateProject"
    }
  },

  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4318/v1/traces"
  },

  "AllowedHosts": "*"
}
